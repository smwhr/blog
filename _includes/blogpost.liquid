{% include _head %}

    <div class="container post-container">
      <div class="back-link">
        <a href="/">← Back</a>
      </div>
      <h1>{{ title }}</h1>
      <em class="meta">{{ date | date: '%B %e, %Y' }} 
      {% if categories.length %}
        {% for category in categories %}
         — {{ category | capitalize }}
        {% endfor %}
      {% endif %}</em>

      <div class="content">{{ content }}</div>
      <div class="back-link">
        <a href="/">← Back</a>
      </div>
    </div>

{% include _foot %}